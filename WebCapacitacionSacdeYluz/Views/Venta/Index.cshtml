@model IEnumerable<WebCapacitacionSacdeYluz.Data.Models.DwfVentas>

<link href="~/libs/select2/select2.min.css" rel="stylesheet" type="text/css" />
<link href="~/css/tables-btn/index.css" rel="stylesheet" type="text/css" />

<div class="container mt-4">
    <h2>Ventas</h2>

    <button type="button" class="btn btn-success mb-3" id="buttonCreate-venta">
        Registrar Venta
    </button>

    <table id="datatable-venta" class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tienda</th>
                <th>FechaVenta</th>
                <th>Vendedor</th>
                <th>TotalVenta</th>
                <th>Modelo</th>
                <th>Cantidad</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Vendedor.Tienda.Nombre</td>
                    <td>@item.FechaPago</td>
                    <td>@item.Vendedor.Nombre</td>
                    <td>@item.TotalVenta</td>
                    <td>
                        @foreach (var detalle in item.VentasXCalzado)
                            {
                                @detalle.Calzado.Modelo <br />
                            }
                    </td>
                    <td>
                        @foreach (var detalle in item.VentasXCalzado)
                            {
                                @detalle.Cantidad <br />
                            }
                    </td>
                    <td style="white-space: nowrap;">
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal Crear-->
<form id="form-venta">
    <div class="modal fade" id="modalScrollable-venta" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalScrollableTitle-venta"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" readonly id="id-venta" class="form-control mb-2" />

                    <div class="form-group">
                        <label for="venta-tienda">Tienda</label>
                        <select id="venta-tienda" class="form-control"></select>
                        <span id="venta-tienda-obligatorio" class="text-danger" style="display:none;">Obligatorio</span>
                    </div>

                    <div class="form-group">
                        <label for="venta-vendedor">Vendedor</label>
                        <select id="venta-vendedor" class="form-control"></select>
                        <span id="venta-vendedor-obligatorio" class="text-danger" style="display:none;">Obligatorio</span>
                    </div>



                   <div id="detalle-venta">
                    <h6>Detalle de calzados</h6>
                    <button type="button" id="buttonAdd-calzado" class="btn btn-primary mb-2">Agregar calzado</button>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                              <th>Modelo</th>
                              <th>Cantidad</th>
                              <th></th>
                            </tr>
                        </thead>
                        <tbody id="calzados-seleccionados">
                        <tr><td colspan="3" class="text-center">No hay calzados seleccionados</td></tr>
                        </tbody>
                        </table>
                       </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" id="buttonSave-venta" class="btn btn-primary">Guardar</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</form>

